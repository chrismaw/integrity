<footer class="container-fluid text-white">
    {#<div style="background-color: #0f212c;" class="d-none d-md-flex row">#}
        {#<div class="col">&nbsp;</div>#}
        {#<div class="col">&nbsp;</div>#}
    {#</div>#}
    <div class="d-none d-md-flex row">
        <div style="background-color: #0f212c;font-size: small" class="col-10 px-5 pt-2">
            <div class="row mx-0">
                <div class="col-7">{{ settings.address }} {{ settings.city }}, {{ settings.state }} {{ settings.zip }}</div>
                <div class="col-5 text-center"><a style="text-decoration: none; letter-spacing: 2px" class="text-white" href="{{ app_uri }}about/mission"><strong>MATURE & MULTIPLY</strong></a></div>
            </div>
            <div class="row mx-0 mb-2">
                <div class="col-7">{{ settings.phone }} | {{ settings.email }}</div>
                <div class="col-5 text-center small">INTEGRITY CHURCH EXISTS TO MATURE AND MULTIPLY BELIEVERS TO LEAVE A GOSPEL LEGACY.</div>
            </div>
            {#<div class="row mx-0">#}
                {#<div class="col">&nbsp;</div>#}
                {#<div class="col">&nbsp;</div>#}
            {#</div>#}
            <div class="row mx-0 border-top border-info">
                <div style="font-size: 14px" class="col-8 my-auto pr-0">Copyright Â© 2018 Integrity Church | Greenville NC</div>
                <div class="col-4 text-center pl-0 py-1">
                    <div class="d-inline">
                        <a href="#" class="d-inline text-light px-1"><img src="{{ app_uri }}img/icons/facebook.png"></a>
                        <a href="#" class="d-inline px-1"><img src="{{ app_uri }}img/icons/instagram.png"></a>
                        <a href="#" class="d-inline px-1"><img src="{{ app_uri }}img/icons/twitter.png"></a>
                        <a href="#" class="d-inline px-1"><img src="{{ app_uri }}img/icons/spotify.png"></a>
                    </div>
                </div>
            </div>
        </div>
        <div style="background-color: #0f212c; font-size: small" class="col-2 pl-0 align-text-bottom pt-2">
            <div class="list-group list-group-flush p-0 text-right">
                {% for link in footerLinkList %}
                    <a class="list-group-item bg-transparent p-0 border-info text-white" href="{{ app_uri }}{{ link.parent ? link.parent : '' }}/{{ link.path }}">{{ link.name|title }}</a>
                {% endfor %}
                    <a class="list-group-item bg-transparent text-white p-0 border-info text-white" href="{{ app_uri }}admin/settings">Admin</a>
            </div>
        </div>
        {#{% else %}#}
            {#<h1>Who needs a footer anyway?</h1>#}
    </div>

    {#{% endif %}#}

    <nav class="d-md-none navbar fixed-bottom navbar-expand-md navbar-dark">
        {% if settings %}
            <a class="navbar-brand text-hide" href="{{ app_uri }}">Integrity Church
                <img src="{{ app_uri }}img/{{ settings.header_logo_light }}"/>
            </a>
        {% endif %}
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapse"
                aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarCollapse">
            {% if headerLinks %}
                <ul class="navbar-nav text-right text-white">
                    {% for key, parent in headerLinks %}
                        {% if key|length %}
                            <li class="nav-item dropup text-white">
                                <a class="nav-link dropdown-toggle" style="color:white !important;" href="#" id="dropdown10" role="button"
                                   data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    {{ key|title }}
                                </a>
                                <div class="dropdown-menu dropdown-menu-right text-right" style="border:none" aria-labelledby="dropdown10">
                                    {% for link in parent %}
                                        <a class="dropdown-item "
                                           href="{{ app_uri }}{{ link.parent ?  link.parent : '' }}/{{ link.path }}">{{ link.name|title }}</a>
                                    {% endfor %}
                                </div>
                            </li>
                        {% endif %}
                    {% endfor %}
                </ul>
            {% else %}
                <h1>No Parents, No Rules!</h1>
            {% endif %}
        </div>
    </nav>

</footer>