<footer class="container-fluid">
    <div class="d-none d-md-flex row">
        <div style="background-color: #0f212c;font-size: small" class="col-10 px-5">
            <div class="row mx-0">
                <div class="col">Col 1</div>
                <div class="col">Col 2</div>
            </div>
            <div class="row mx-0">
                <div class="col">Col 1</div>
                <div class="col">Col 2</div>
            </div>
            <div class="row mx-0">
                <div class="col">Col 1</div>
                <div class="col">Col 2</div>
            </div>
            <div class="row mx-0 border-top border-info">
                <div style="font-size: 14px" class="col-8 my-auto pr-0">Copyright Â© 2018 Integrity Church | Greenville NC</div>
                <div class="col-4 text-right pl-0 py-1">
                    <div class="d-inline">
                        <a href="#" class="d-inline text-white px-1"><img src="{{ app_uri }}img/icons/facebook.png"></a>
                        <a href="#" class="d-inline px-1"><img src="{{ app_uri }}img/icons/instagram.png"></a>
                        <a href="#" class="d-inline px-1"><img src="{{ app_uri }}img/icons/twitter.png"></a>
                    </div>
                </div>
            </div>
        </div>
            <div style="background-color: #0f212c; font-size: small" class="col-2 pl-0">
                <div class="list-group list-group-flush p-0 text-right">
                    {% for link in footerLinkList %}
                        <a class="list-group-item bg-transparent p-0 border-info text-white" href="{{ app_uri }}{{ link.parent ? '/' ~ link.parent : '' }}/{{ link.path }}">{{ link.name|title }}</a>
                    {% endfor %}
                        <a class="list-group-item bg-transparent text-white p-0 border-info text-white" href="{{ app_uri }}/admin/settings">Admin</a>
                </div>
            </div>
        {#{% else %}#}
            {#<h1>Who needs a footer anyway?</h1>#}
    </div>

    {#{% endif %}#}

    <nav class="d-md-none navbar fixed-bottom navbar-expand-md navbar-dark">
        {% if settings %}
            <a class="navbar-brand text-hide" href="{{ app_uri }}">Integrity Church
                <img src="{{ app_uri }}img/{{ settings.header_logo_light }}"/>
            </a>
        {% endif %}
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapse"
                aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarCollapse">
            {% if headerLinks %}
                <ul class="navbar-nav text-right">
                    {% for key, parent in headerLinks %}
                        {% if key|length %}
                            <li class="nav-item dropup">
                                <a class="nav-link dropdown-toggle text-white" href="#" id="dropdown10" role="button"
                                   data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    {{ key|title }}
                                </a>
                                <div class="dropdown-menu dropdown-menu-right text-right" aria-labelledby="dropdown10">
                                    {% for link in parent %}
                                        <a class="dropdown-item"
                                           href="{{ app_uri }}{{ link.parent ?  link.parent : '' }}/{{ link.path }}">{{ link.name|title }}</a>
                                    {% endfor %}
                                </div>
                            </li>
                        {% endif %}
                    {% endfor %}
                </ul>
            {% else %}
                <h1>No Parents, No Rules!</h1>
            {% endif %}
        </div>
    </nav>

</footer>